# Mailchimp (for newsletter, if implemented)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_AUDIENCE_ID=your_audience_id_here

# -------------------------------------
# SOCIAL MEDIA
# -------------------------------------
NEXT_PUBLIC_TWITTER_HANDLE=@TheUSDOXs
NEXT_PUBLIC_GITHUB_URL=https://github.com/VKATHUSHAN
NEXT_PUBLIC_WEBSITE_URL=https://theusdox.com
NEXT_PUBLIC_SUPPORT_EMAIL=hello@theusdox.com

# -------------------------------------
# SECURITY & RATE LIMITING
# -------------------------------------
# Rate limiting (if you implement API routes)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# -------------------------------------
# FEATURE FLAGS
# -------------------------------------
# Enable/disable features
NEXT_PUBLIC_ENABLE_SWAP=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# -------------------------------------
# EXTERNAL INTEGRATIONS
# -------------------------------------
# Uniswap
NEXT_PUBLIC_UNISWAP_URL=https://app.uniswap.org

# Etherscan
NEXT_PUBLIC_ETHERSCAN_URL=https://etherscan.io

# -------------------------------------
# DEVELOPMENT vs PRODUCTION
# -------------------------------------
# Set to 'development', 'staging', or 'production'
NODE_ENV=production

# -------------------------------------
# DATABASE (if you add backend features)
# -------------------------------------
# PostgreSQL / MongoDB connection strings
# DATABASE_URL=postgresql://user:password@localhost:5432/usdox_db
# MONGODB_URI=mongodb://localhost:27017/usdox

# -------------------------------------
# VERCEL-SPECIFIC VARIABLES
# -------------------------------------
# These are automatically set by Vercel, but you can override
# VERCEL_URL=
# VERCEL_ENV=production
# VERCEL_GIT_COMMIT_SHA=

# -------------------------------------
# NOTES & INSTRUCTIONS
# -------------------------------------
#
# 1. Copy this file to .env.local for local development
# 2. Set up environment variables in Vercel dashboard for production
# 3. Never commit files containing real API keys
